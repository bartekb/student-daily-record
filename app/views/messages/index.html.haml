.container-fluid
  .row-fluid
    .span2
      %div{:style => "padding: 5px;"}
        = link_to new_message_path, :class => "btn" do 
          %i.icon-pencil
          %strong UTWÓRZ NOWĄ

      .sidebar-nav
        = render "sidebar"

    .span10
      - unless @messages.blank?
        %table.table.table-condensed.table-hover
          %thead
            %tr
              %th.span1
                %input{:type => "checkbox"}/
              %th.span4
              %th.span8
              %th.span2
          %tbody
            = render :partial => "message", :collection => @messages
      - else
        .well
          %p.text-center= t(".no_messages_info")


