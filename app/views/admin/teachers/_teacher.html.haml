%tr
  %td
    = teacher.fullname || 'brak'
  %td
    = teacher.username
  %td
    = teacher.email || 'brak'
  %td
    = teacher.last_sign_in_at? ? l(teacher.last_sign_in_at, :format => :short) : "nigdy"
  %td
    = l(teacher.created_at, :format => :short)
  %td{:style => "width: 70px;"}
    = link_to edit_admin_teacher_path(teacher), :remote => true, :class => "btn btn-small" do
      #i.icon-edit
    = link_to admin_teacher_path(teacher), :method => :delete, :class => "btn btn-small btn-danger", :confirm => "Jesteś pewien? Tego się nie da cofnąć." do
      #i.icon-remove-sign
